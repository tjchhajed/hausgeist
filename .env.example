# Hausgeist Environment Variables
# Copy this to .env and fill in your values

# Notion Integration
# Get your API key from: https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_integration_token

# Your Hausgeist database ID
# Find it in the database URL: notion.so/[workspace]/[DATABASE_ID]?v=...
NOTION_DATABASE_ID=your_database_id

# OpenClaw Configuration (if needed)
# OPENCLAW_MODEL=claude-sonnet-4-20250514

# Optional: Timezone for scheduled tasks
TZ=Europe/Berlin
