{
  "name": "hausgeist",
  "version": "0.1.0",
  "description": "Family operating system - Jira for home",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test:notion": "ts-node src/notion/test.ts",
    "setup:notion": "ts-node scripts/setup-notion.ts",
    "setup:notion:with-samples": "ts-node scripts/setup-notion.ts --samples",
    "skill:tasks": "ts-node skills/tasks/index.ts",
    "test:rules": "ts-node src/rules/test.ts",
    "heartbeat": "ts-node -e \"import{runWeeklyHeartbeat}from'./src/rules';runWeeklyHeartbeat().then(console.log)\""
  },
  "dependencies": {
    "@notionhq/client": "^2.2.0",
    "@sinclair/typebox": "^0.34.48",
    "dotenv": "^16.3.1",
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
